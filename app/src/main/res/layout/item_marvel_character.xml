<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_item_iv_height"
    android:layout_marginStart="@dimen/card_item_margin_sides"
    android:layout_marginEnd="@dimen/card_item_margin_sides">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMarvelThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_item_margin_sides"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_item_name_height"
            android:background="@color/colorTransparentItem"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:lines="1"
            android:paddingStart="@dimen/card_item_margin_sides"
            android:paddingEnd="@dimen/card_item_margin_sides"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/card_item_name_text_size"
            tools:text="Some Cool Marvel Character With Extra Long Name" />

    </FrameLayout>

</androidx.cardview.widget.CardView>