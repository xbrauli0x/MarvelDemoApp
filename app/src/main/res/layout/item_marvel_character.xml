<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_item_margin_sides"
    android:layout_marginEnd="@dimen/card_item_margin_sides">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMarvelThumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_item_iv_height"
            android:padding="@dimen/card_item_margin_sides"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="8dp"
            tools:text="Some Cool Marvel Character With Extra Long Name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>